{
  "name": "crosstope",
  "version": "0.1.0",
  "private": false,
  "scripts": {
    "migrate-sqlite": "prisma migrate dev",
    "migrate-postgres": "prisma migrate dev --name init --schema=./prisma/_pg/schema.prisma",
    "generate-sqlite": "prisma generate",
    "generate-postgres": "prisma generate --schema=./prisma/_pg/schema.prisma",
    "prisma-studio-sqlite": "prisma studio",
    "prisma-studio-postgres": "prisma studio --schema=./prisma/_pg/schema.prisma",
    "db-seed": "prisma db seed",
    "db-reset": "prisma migrate reset",
    "dx:next": "run-s migrate-sqlite generate-sqlite db-seed && next dev",
    "dx:prisma-studio": "pnpm prisma-studio-sqlite",
    "dx": "run-p dx:* --print-label",
    "dev": "pnpm dx:next",
    "prep-sqlite": "run-s generate-sqlite migrate-sqlite",
    "build-sqlite": "next build",
    "build-postgres": "run-s generate-postgres migrate && next build",
    "build": "pnpm build-postgres",
    "start": "next start",
    "lint": "eslint --ext \".js,.ts,.tsx\" --report-unused-disable-directives --report-unused-disable-directives src",
    "lint-fix": "pnpm lint --fix",
    "migrate-dev": "prisma migrate dev",
    "migrate": "prisma migrate deploy",
    "test": "run-s test:*",
    "test:unit": "vitest run",
    "test:e2e": "playwright test",
    "test-dev": "start-server-and-test 'next dev' http://127.0.0.1:3000 test",
    "test-start": "start-server-and-test start http://127.0.0.1:3000 test",
    "postinstall": "prisma generate"
  },
  "prisma": {
    "seed": "tsx prisma/seed.ts"
  },
  "prettier": {
    "printWidth": 80,
    "trailingComma": "all",
    "singleQuote": true,
    "semi": false
  },
  "dependencies": {
    "@chakra-ui/icons": "^2.0.11",
    "@chakra-ui/react": "^2.3.4",
    "@emotion/react": "^11",
    "@emotion/styled": "^11",
    "@prisma/client": "^4.9.0",
    "@tanstack/react-query": "^4.3.8",
    "@tanstack/react-query-devtools": "^4.3.9",
    "@trpc/client": "^10.9.0",
    "@trpc/next": "^10.9.0",
    "@trpc/react-query": "^10.9.0",
    "@trpc/server": "^10.9.0",
    "clsx": "^1.1.1",
    "framer-motion": "^6",
    "next": "^13.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-hook-form": "^7.40.0",
    "react-use": "^17.4.0",
    "superjson": "^1.7.4",
    "zod": "^3.0.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.19.2",
    "@types/jest": "^27.0.1",
    "@types/node": "^18.7.11",
    "@types/react": "^18.0.9",
    "@typescript-eslint/eslint-plugin": "^5.47.0",
    "@typescript-eslint/parser": "^5.47.0",
    "csv-parse": "^5.3.0",
    "eslint": "^8.33.0",
    "eslint-config-next": "^13.1.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-react": "^7.31.11",
    "eslint-plugin-react-hooks": "^4.6.0",
    "npm-run-all": "^4.1.5",
    "playwright": "^1.19.1",
    "prettier": "^2.7.1",
    "prisma": "^4.9.0",
    "start-server-and-test": "^1.12.0",
    "tsx": "^3.9.0",
    "typescript": "4.8.4",
    "vite": "^3.1.3",
    "vitest": "^0.23.4"
  },
  "publishConfig": {
    "access": "restricted"
  }
}
