// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Post {
  id    String @id @default(uuid())
  title String
  text  String

  // To return `Date`s intact through the API we use transformers
  // https://trpc.io/docs/data-transformers
  // This is unique so it can be used for cursor-based pagination
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now()) @updatedAt
}

model PMHC {
  complex_code             String    @id
  sequence                 String
  epitope_id_by_iedb       String
  link_epitope_id_by_iedb  String
  structure_type           String
  mhc_allele_id            String
  mhc_allele               MHCAllele @relation(fields: [mhc_allele_id], references: [id])
  source_organism          String
  epitope_position         String
  immunological_background String
  reference                String
  link_para_source_protein String
  link_para_reference      String
  peptide_lenght           String

  id_sequence              String?
  source_protein           String?
  deposition               String?
  release                  String?
  last_modification        String?
  structure_source         String?
  link_para_structure_type String?
}

model MHCAllele {
  id   String @id
  PMHC PMHC[]
}
